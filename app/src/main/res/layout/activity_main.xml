<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/addPatient"
        android:layout_width="145dp"
        android:layout_height="52dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="76dp"
        android:text="AddPatient"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/patientTest"
        android:layout_width="153dp"
        android:layout_height="61dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="228dp"
        android:text="Add Patient Test"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/patientRec"
        android:layout_width="172dp"
        android:layout_height="54dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="148dp"
        android:text="View Patient Record"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/patientInfo"
        android:layout_width="167dp"
        android:layout_height="55dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="76dp"
        android:text="Edit Patient info"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/PatientList"
        android:layout_width="152dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="148dp"
        android:text="View Patients List"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>